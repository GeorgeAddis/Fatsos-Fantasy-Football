generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Player {
  playerId Int       @id @default(autoincrement()) @map("PlayerId")
  fullName String    @db.VarChar(255) @map("FullName")
  position String   @db.VarChar(50) @map("Position")
  team     String?   @db.VarChar(100) @map("Team")
  rankings Ranking[]

  @@map("Player")
}

model Ranking {
  rankingId Int      @id @default(autoincrement()) @map("RankingId")
  playerId  Int     @map("PlayerId")
  rank      Int      @map("Rank")
  type      String   @db.VarChar(50) @map("Type")
  tier      Int      @map("Tier") // Add this line
  player    Player  @relation(fields: [playerId], references: [playerId])

  @@unique([playerId, type])
  @@map("Ranking")
}
